    }

    #FooterNew-{{ section.id }} .footer-link,
    #FooterNew-{{ section.id }} .contact-email,
    #FooterNew-{{ section.id }} .vision-text {
      font-size: 16px;
    }

    #FooterNew-{{ section.id }} .payment-icons {
      gap: 15px;
    }

    #FooterNew-{{ section.id }} .payment-icon {
      height: 25px;
    }
  }

  @media screen and (max-width: 599px) {
    #FooterNew-{{ section.id }} .footer-left {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    #FooterNew-{{ section.id }} .footer-column-title,
    #FooterNew-{{ section.id }} .newsletter-title,
    #FooterNew-{{ section.id }} .contact-title,
    #FooterNew-{{ section.id }} .vision-title {
      font-size: 20px;
    }

    #FooterNew-{{ section.id }} .footer-link,
    #FooterNew-{{ section.id }} .contact-email,
    #FooterNew-{{ section.id }} .vision-text {
      font-size: 14px;
    }

    #FooterNew-{{ section.id }} .social-icons {
      gap: 15px;
    }

    #FooterNew-{{ section.id }} .social-icon {
      width: 35px;
      height: 35px;
    }

    #FooterNew-{{ section.id }} .payment-icons {
      gap: 10px;
    }

    #FooterNew-{{ section.id }} .payment-icon {
      height: 20px;
    }
  }
{%- endstyle -%}

<div id="FooterNew-{{ section.id }}" class="footer-new">
  <div class="footer-container">
    <div class="footer-main">
      <!-- 左侧三列 -->
      <div class="footer-left">
        <!-- Company 列 -->
        <div class="footer-column">
          <h3 class="footer-column-title">{{ section.settings.company_title | default: 'Company' }}</h3>
          <div class="footer-column-links">
            {%- for block in section.blocks -%}
              {%- if block.type == 'company_link' -%}
                <a href="{{ block.settings.link }}" class="footer-link">{{ block.settings.text }}</a>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>

        <!-- Information 列 -->
        <div class="footer-column">
          <h3 class="footer-column-title">{{ section.settings.information_title | default: 'Information' }}</h3>
          <div class="footer-column-links">
            {%- for block in section.blocks -%}
              {%- if block.type == 'information_link' -%}
                <a href="{{ block.settings.link }}" class="footer-link">{{ block.settings.text }}</a>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>

        <!-- Customer Service 列 -->
        <div class="footer-column">
          <h3 class="footer-column-title">
            {{ section.settings.customer_service_title | default: 'Customer Service' }}
          </h3>
          <div class="footer-column-links">
            {%- for block in section.blocks -%}
              {%- if block.type == 'customer_service_link' -%}
                <a href="{{ block.settings.link }}" class="footer-link">{{ block.settings.text }}</a>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </div>

      <!-- 右侧区域 -->
      <div class="footer-right">
        <!-- 订阅区域 -->
        <div class="newsletter-section">
          <h3 class="newsletter-title">
            {{ section.settings.newsletter_title | default: 'Subscribe To Our Newsletter' }}
          </h3>
          {%- form 'customer', id: 'ContactFooterNew', class: 'newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="newsletter-input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooterNew-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooterNew-success"
              {% endif %}
              placeholder="Email"
              required
            >
            <button
              type="submit"
              class="newsletter-button"
              name="commit"
              id="SubscribeNew"
              aria-label="Subscribe"
            >
              <svg viewBox="0 0 24 24">
                <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
              </svg>
            </button>
            {%- if form.errors -%}
              <div class="newsletter-message" id="ContactFooterNew-error">
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </div>
            {%- endif -%}
          {%- endform -%}
          {%- if form.posted_successfully? -%}
            <div class="newsletter-message newsletter-success" id="ContactFooterNew-success">
              {{- 'newsletter.success' | t }}
            </div>
          {%- endif -%}
        </div>

        <!-- 社交媒体图标 -->
        <div class="social-icons">
          {%- for block in section.blocks -%}
            {%- if block.type == 'social_icon' and block.settings.icon != blank -%}
              <a href="{{ block.settings.link }}" class="social-icon" target="_blank" rel="noopener">
                <img
                  src="{{ block.settings.icon | image_url: width: 80 }}"
                  alt="{{ block.settings.alt_text | default: 'Social Media Icon' }}"
                  width="20"
                  height="20"
                  loading="lazy"
                >
              </a>
            {%- endif -%}
          {%- endfor -%}
        </div>

        <!-- 售前支持 -->
        <div class="contact-info">
          <h3 class="contact-title">{{ section.settings.contact_title | default: 'Pre-sales Support :' }}</h3>
          <p class="contact-email">{{ section.settings.contact_email | default: 'info@top-feel.com' }}</p>
        </div>

        <!-- 愿景 -->
        <div class="vision-section">
          <h3 class="vision-title">{{ section.settings.vision_title | default: 'Vision' }}</h3>
          <p class="vision-text">
            {{
              section.settings.vision_text
              | default: 'Imagine: an early morning adventure through the bustling streets, effortlessly moving between the rhythms of the city. Say goodbye to the banal routine and embrace the excitement of the unknown. Join us on a journey that makes every commute an adventure!'
            }}
          </p>
        </div>
      </div>
    </div>

    <!-- 底部支付方式 -->
    <div class="footer-bottom">
      <div class="payment-icons">
        {%- for block in section.blocks -%}
          {%- if block.type == 'payment_icon' and block.settings.icon != blank -%}
            <img
              src="{{ block.settings.icon | image_url: width: 120 }}"
              alt="{{ block.settings.alt_text | default: 'Payment Method' }}"
              class="payment-icon"
              width="60"
              height="30"
              loading="lazy"
            >
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>


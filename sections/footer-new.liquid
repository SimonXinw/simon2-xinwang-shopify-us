{%- style -%}
  #FooterNew-{{ section.id }} {
    width: 100%;
    background-color: #000;
    color: #fff;
    padding: 65px 140px 55px 140px;
  }

  #FooterNew-{{ section.id }} .footer-container {
    margin: 0 auto;
    max-width: 1680px;
  }

  #FooterNew-{{ section.id }} .footer-main {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 80px;
    margin-bottom: 60px;
  }

  #FooterNew-{{ section.id }} .footer-left {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  #FooterNew-{{ section.id }} .footer-column {
    display: flex;
    flex-direction: column;
  }

  #FooterNew-{{ section.id }} .footer-column-title {
    font-family: Inter, sans-serif;
    font-weight: 700;
    font-style: Bold;
    font-size: 32px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #fff;
    margin: 0 0 55px 0;
  }

  #FooterNew-{{ section.id }} .footer-column-links {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  #FooterNew-{{ section.id }} .footer-link {
    font-family: Inter, sans-serif;
    font-weight: 400;
    font-style: Regular;
    font-size: 20px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #fff;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  #FooterNew-{{ section.id }} .footer-link:hover {
    opacity: 0.8;
  }

  #FooterNew-{{ section.id }} .footer-right {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  #FooterNew-{{ section.id }} .newsletter-section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  #FooterNew-{{ section.id }} .newsletter-title {
    font-family: Inter, sans-serif;
    font-weight: 700;
    font-style: Bold;
    font-size: 32px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #fff;
    margin: 0;
    margin-bottom: 37px;
  }

  #FooterNew-{{ section.id }} .newsletter-form {
    position: relative;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin:0;
    margin-bottom: 20px;

  }

  #FooterNew-{{ section.id }} .newsletter-input {
    width: 100%;
    padding: 15px 60px 15px 20px;
    border: 1px solid #333;
    border-radius: 25px;
    background-color: transparent;
    color: #fff;
    font-family: Inter, sans-serif;
    font-size: 16px;
    outline: none;
  }

  #FooterNew-{{ section.id }} .newsletter-input::placeholder {
    color: #999;
  }

  #FooterNew-{{ section.id }} .newsletter-button {
    position: absolute;
    right: 5px;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    border: none;
    border-radius: 50%;
    background-color: #fff;
    color: #000;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  #FooterNew-{{ section.id }} .newsletter-button:hover {
    background-color: #f0f0f0;
  }

  #FooterNew-{{ section.id }} .newsletter-button svg {
    width: 20px;
    height: 20px;
    fill: #000;
  }

  #FooterNew-{{ section.id }} .newsletter-message {
    font-family: Inter, sans-serif;
    font-size: 14px;
    color: #ff6b6b;
    margin-top: 10px;
  }

  #FooterNew-{{ section.id }} .newsletter-success {
    color: #51cf66;
  }

  #FooterNew-{{ section.id }} .social-icons {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  #FooterNew-{{ section.id }} .social-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: #333;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  #FooterNew-{{ section.id }} .social-icon:hover {
    background-color: #555;
  }

  #FooterNew-{{ section.id }} .social-icon img {
    width: 20px;
    height: 20px;
    filter: brightness(0) invert(1);
  }

  #FooterNew-{{ section.id }} .contact-info {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  #FooterNew-{{ section.id }} .contact-title {
    font-family: Inter, sans-serif;
    font-weight: 700;
    font-style: Bold;
    font-size: 32px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #fff;
    margin: 0;
  }

  #FooterNew-{{ section.id }} .contact-email {
    font-family: Inter, sans-serif;
    font-weight: 400;
    font-style: Regular;
    font-size: 20px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #fff;
    margin: 0;
  }

  #FooterNew-{{ section.id }} .vision-section {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  #FooterNew-{{ section.id }} .vision-title {
    font-family: Inter, sans-serif;
    font-weight: 700;
    font-style: Bold;
    font-size: 32px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #fff;
    margin: 0;
  }

  #FooterNew-{{ section.id }} .vision-text {
    font-family: Inter, sans-serif;
    font-weight: 400;
    font-style: Regular;
    font-size: 20px;
    line-height: 140%;
    letter-spacing: 0%;
    color: #fff;
    margin: 0;
  }

  #FooterNew-{{ section.id }} .footer-bottom {
    border-top: 1px solid #333;
    padding-top: 40px;
  }

  #FooterNew-{{ section.id }} .payment-icons {
    display: flex;
    gap: 20px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }

  #FooterNew-{{ section.id }} .payment-icon {
    height: 30px;
    width: auto;
    filter: brightness(0) invert(1);
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  #FooterNew-{{ section.id }} .payment-icon:hover {
    opacity: 1;
  }

  @media screen and (max-width: 1199px) {
    #FooterNew-{{ section.id }} .footer-main {

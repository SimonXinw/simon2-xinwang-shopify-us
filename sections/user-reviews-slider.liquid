{%- style -%}
  #UserReviewsSlider-{{ section.id }} {
    width: 100%;
    padding: {{ section.settings.section_padding_top | default: 80 }}px 0 {{ section.settings.section_padding_bottom | default: 80 }}px 0;
  }

  #UserReviewsSlider-{{ section.id }} .reviews-container {
    width: 90%;
    margin: 0 auto;
  }

  #UserReviewsSlider-{{ section.id }} .reviews-title {
    font-family: Inter, sans-serif;
    font-weight: 700;
    font-style: normal;
    font-size: 64px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #000;
    margin: 0 0 60px 0;
    text-align: left;
  }

  #UserReviewsSlider-{{ section.id }} .reviews-slider {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scrollbar-width: thin;
    scrollbar-color: #808080 transparent;
  }

  #UserReviewsSlider-{{ section.id }} .reviews-slider::-webkit-scrollbar {
    height: 8px;
  }

  #UserReviewsSlider-{{ section.id }} .reviews-slider::-webkit-scrollbar-track {
    background: transparent;
  }

  #UserReviewsSlider-{{ section.id }} .reviews-slider::-webkit-scrollbar-thumb {
    background: #808080;
    border-radius: 4px;
  }

  #UserReviewsSlider-{{ section.id }} .review-item {
    flex: 0 0 calc(33.333% - 14px);
    min-width: 300px;
    height: auto;
    transform: rotate(0deg);
    border-radius: 20px;
    background: #D9D9D9;
    padding: 30px 40px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  #UserReviewsSlider-{{ section.id }} .review-text {
    font-family: Inter, sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 24px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #000;
    margin-bottom: 20px;
    word-wrap: break-word;
  }

  #UserReviewsSlider-{{ section.id }} .user-info {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  #UserReviewsSlider-{{ section.id }} .user-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  #UserReviewsSlider-{{ section.id }} .user-details {
    display: flex;
    gap: 20px;
  }

  #UserReviewsSlider-{{ section.id }} .user-name {
    font-family: Inter, sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 24px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #000;
  }

  #UserReviewsSlider-{{ section.id }} .stars-container {
    display: flex;
    gap: 5px;
  }

  #UserReviewsSlider-{{ section.id }} .star {
    width: 30px;
    height: 30px;
    flex-shrink: 0;
  }

  @media screen and (max-width: 1199px) {
    #UserReviewsSlider-{{ section.id }} .reviews-title {
      font-size: 56px;
    }

    #UserReviewsSlider-{{ section.id }} .review-item {
      flex: 0 0 calc(50% - 10px);
    }
  }

  @media screen and (max-width: 899px) {
    #UserReviewsSlider-{{ section.id }} .reviews-title {
      font-size: 48px;
      margin-bottom: 30px;
    }

    #UserReviewsSlider-{{ section.id }} .review-item {
      flex: 0 0 calc(100% - 20px);
      min-width: 280px;
    }

    #UserReviewsSlider-{{ section.id }} .review-text {
      font-size: 20px;
    }

    #UserReviewsSlider-{{ section.id }} .user-name {
      font-size: 20px;
    }
  }

  @media screen and (max-width: 599px) {
    #UserReviewsSlider-{{ section.id }} .reviews-title {
      font-size: 36px;
      margin-bottom: 24px;
    }

    #UserReviewsSlider-{{ section.id }} .review-item {
      padding: 20px 25px;
      min-width: 250px;
    }

    #UserReviewsSlider-{{ section.id }} .review-text {
      font-size: 18px;
    }

    #UserReviewsSlider-{{ section.id }} .user-avatar {
      width: 80px;
      height: 80px;
    }

    #UserReviewsSlider-{{ section.id }} .user-name {
      font-size: 18px;
    }

    #UserReviewsSlider-{{ section.id }} .star {
      width: 25px;
      height: 25px;
    }
  }
{%- endstyle -%}

<div id="UserReviewsSlider-{{ section.id }}" class="section">
  <div class="reviews-container">
    {%- if section.settings.title != blank -%}
      <h2 class="reviews-title">{{ section.settings.title }}</h2>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="reviews-slider">
        {%- for block in section.blocks -%}
          <div class="review-item" {{ block.shopify_attributes }}>
            {%- if block.settings.review_text != blank -%}
              <div class="review-text">{{ block.settings.review_text }}</div>
            {%- endif -%}

            <div class="user-info">
              {%- if block.settings.user_avatar != blank -%}
                <img
                  src="{{ block.settings.user_avatar | image_url: width: 200 }}"
                  alt="{{ block.settings.user_avatar.alt | default: 'User Avatar' }}"
                  class="user-avatar"
                  width="100"
                  height="100"
                  loading="lazy"
                >
              {%- endif -%}

              <div class="user-details">
                {%- if block.settings.user_name != blank -%}
                  <div class="user-name">{{ block.settings.user_name }}</div>
                {%- endif -%}

                {%- if block.settings.rating > 0 -%}
                  <div class="stars-container">
                    {%- for i in (1..5) -%}
                      {%- if i <= block.settings.rating -%}
                        <svg class="star" viewBox="0 0 24 24" fill="#FFD700">
                          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                      {%- else -%}
                        <svg class="star" viewBox="0 0 24 24" fill="#E0E0E0">
                          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                      {%- endif -%}
                    {%- endfor -%}
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "用户评论滑块",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "用户评论"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "顶部内边距",
      "default": 80
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "底部内边距",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "review_item",
      "name": "评论项目",
      "settings": [
        {
          "type": "textarea",
          "id": "review_text",
          "label": "评论内容",
          "default": "这是一个很棒的产品，我非常满意！"
        },
        {
          "type": "image_picker",
          "id": "user_avatar",
          "label": "用户头像"
        },
        {
          "type": "text",
          "id": "user_name",
          "label": "用户姓名",
          "default": "张三"
        },
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "评分",
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "用户评论滑块",
      "settings": {
        "title": "用户评论"
      },
      "blocks": [
        {
